<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frag1"
    tools:context="com.hrw.remotecontroller.activities.SecondFragment$PlaceholderFragment" >

    <TextView
        android:id="@+id/Second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Toggle up your WIFI\nConfirm your PC and\nYour control device connected to the same WIFI spot"
        android:textStyle="italic|bold"
        android:visibility="invisible"
         />

    <TextView
        android:id="@+id/First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Second"
        android:layout_centerHorizontal="true"
        android:text="First"
        android:textSize="30sp"
        android:textStyle="italic"
        android:visibility="invisible" />

</RelativeLayout>